        <item name="android:maxLines">1</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimaryContainer</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="TitleText" parent="@style/TextAppearance.Material3.TitleMedium">
