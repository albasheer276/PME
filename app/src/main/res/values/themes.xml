    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="DisplayMedium" parent="@style/TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/md_theme_light_inverseSurface</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeadlineMedium" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_light_inverseSurface</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="HeadlineSmall" parent="@style/TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TitleLarge" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleMedium" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LabelMedium" parent="@style/TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
